<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>Create new movie</h1>

      <form action="/movies/create" method="post">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            required
            type="text"
            class="form-control"
            id="title"
            name="title"
          />
        </div>
        <div class="mb-3">
          <label for="genre" class="form-label">Genre</label>
          <input type="text" class="form-control" id="genre" name="genre" />
        </div>

        <div class="mb-3">
          <label for="plot" class="form-label">Plot</label>
          <input type="text" class="form-control" id="plot" name="plot" />
        </div>

        <div class="mb-3">
          <label for="cast">Add cast:</label>

          <select name="cast" id="cast" multiple>
            {{#each celebrities}}
              <option value="{{id}}">{{name}}</option>
            {{/each}}
          </select>
        </div>

        <button type="submit" class="btn btn-sm btn-outline-dark">Create new
          movie</button>
        <a href="/" class="btn btn-sm btn-outline-dark">Go back</a>
      </form>
    </div>
  </div>
</div>